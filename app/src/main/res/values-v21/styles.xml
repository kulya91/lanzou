<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoTitle" parent="QMUI.Compat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowColor</item><!--窗口颜色-->
        <item name="android:colorButtonNormal">@color/buttonColor</item><!--默认按钮颜色-->
    </style>

    <style name="ChenJin" parent="QMUI.Compat.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">@color/windowColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="mycheckbox" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="drawableSize">45dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:button">@drawable/mycheckbox</item>
        <item name="android:layout_gravity">center</item>

    </style>
</resources>